package Lista03;

public class _64_Triangulo {
	    public static void main(String[] args) {
	        Scanner input = new Scanner(System.in);

	        System.out.print("Digite a quantidade de tri√¢ngulos: ");
	        int triangulos = input.nextInt();

	        for (int i = 1; i <= triangulos; i++) {
	            for (int j = 1; j <= i; j++) {
	                for (int k = 1; k <= j; k++) {
	                    System.out.print("*");
	                }
	                System.out.println();
	            }
	        }

	        input.close();
	    }
	}
