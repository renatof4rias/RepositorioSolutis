package Lista03;

import java.util.Scanner;

public class _02_Salarios {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.print("Digite o valor do salário do funcionário: ");
		double salarioFuncionario = sc.nextDouble();

		System.out.print("Digite o valor do salário mínimo atual: ");
		double salarioMinimoAtual = sc.nextDouble();

		double quantidadeSalariosMinimos = salarioFuncionario / salarioMinimoAtual;
		System.out.println("O funcionário ganha " + quantidadeSalariosMinimos + " salários mínimos");

		sc.close();
	}
}
