package TestesSolutisss;

public class SomaDados {
	    public static void main(String[] args) {
	       
	    	System.out.println("Possibilidades de soma 7 no lan√ßamento de dois dados:");
	        for (int dado1 = 1; dado1 <= 6; dado1++) { // Primeiro Dado
	            for (int dado2 = 1; dado2 <= 6; dado2++) {// Segundo Dado
	                if (dado1 + dado2 == 7) {
	                    System.out.println("Dado 1: " + dado1 + ", Dado 2: " + dado2);
	                }
	            }
	        }
	    }
	}
