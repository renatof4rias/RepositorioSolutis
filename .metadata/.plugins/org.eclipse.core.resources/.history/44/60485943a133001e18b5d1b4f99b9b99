package TestesSolutisss;

import java.util.Scanner;

public class CodigoProduto {
	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);

	        System.out.print("Digite o código do produto: ");
	        int codigo = scanner.nextInt();

	        String nomeProduto = "";

	        if (codigo == 001) {
	            nomeProduto = "Parafuso";
	        } else if (codigo == 002) {
	            nomeProduto = "Porca";
	        } else if (codigo == 003) {
	            nomeProduto = "Prego";
	        } else {
	            nomeProduto = "Código de produto inválido";
	        }

	        System.out.println("O produto com código " + codigo + " é: " + nomeProduto);

	        scanner.close();
	    }
}

