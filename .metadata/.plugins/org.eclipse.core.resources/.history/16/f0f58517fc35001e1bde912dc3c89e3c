package Lista04;

public class Elefante extends AnimalTerrestreAB {

	private int quantidadePercorrida;
	private int quantidadeDormir;
	private int quantidadeComida;

	public Elefante(String nome, String tipoAnimal, int idade, String habitat, int quantidadePatas, double altura, double peso) {
		super(nome, tipoAnimal, idade, habitat, quantidadePatas, altura, peso);
	}

	@Override
	public void comer() {
		quantidadeComida += 1;
		System.out.println("O elefante est치 comendo. Quantidade de comida ingerida:" + quantidadeComida);
	}

	@Override
	public void moverse() {
		quantidadePercorrida += 5;
		System.out.println("O elefante est치 se movendo. Dist칙ncia percorrida: " + quantidadePercorrida + " Metros");
	}

	@Override
	public void dormir() {
		quantidadeDormir += 5;
		System.out.println("O elefante est치 dormindo. Quantidade de Horas dormida: " + quantidadeDormir);
	}

	@Override
	public void emitirSom() {
		System.out.println("BRRRRRUUUMMMPPPHHH!");
	}
}
